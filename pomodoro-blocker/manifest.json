{
  "manifest_version": 3,
  "name": "Pomodoro Focus Blocker",
  "version": "1.1",
  "description": "Blocks distracting sites during focus sessions. User can add custom URLs.",
  "permissions": ["tabs", "storage", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/timer128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icons/timer128.png"
  }
}
