{
  "manifest_version": 3,
  "name": "Pomodoro Focus Blocker",
  "version": "1.2",
  "description": "Blocks distracting sites during focus sessions. User can add custom URLs.",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/timer128.png"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "http://localhost:3000/pomodoro*",
        "https://task-scheduler-01.vercel.app/pomodoro*"
      ],
      "js": ["content.js"]
    }
  ],

  "icons": {
    "128": "icons/timer128.png"
  }
}
